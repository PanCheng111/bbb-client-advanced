<s:ToggleButton xmlns:fx="http://ns.adobe.com/mxml/2009"
		   xmlns:s="library://ns.adobe.com/flex/spark"
		   xmlns:mx="library://ns.adobe.com/flex/mx"
           width="30" height="30"
           click="onClick()"  styleName="whiteboardScribbleButtonStyle"
		   toolTip="铅笔" 
		   accessibilityName="切换白板光标为铅笔">
	<fx:Script>
		<![CDATA[
			import org.bigbluebutton.model.whiteboard.DrawObject;
			import org.bigbluebutton.model.whiteboard.WhiteboardConstants;
			import org.bigbluebutton.view.navigation.pages.whiteboard.events.WhiteboardButtonEvent;
						
            private function onClick():void {
                var event:WhiteboardButtonEvent = new WhiteboardButtonEvent(WhiteboardButtonEvent.WHITEBOARD_BUTTON_PRESSED);
                event.graphicType = WhiteboardConstants.TYPE_SHAPE;
                event.toolType = DrawObject.PENCIL;
                
                dispatchEvent(event);
            }
            
            public function setTool(gType:String, toolType:String):void {
                if(gType == WhiteboardConstants.TYPE_SHAPE && toolType == DrawObject.PENCIL) {
                    this.selected = true;
                } else {
                    this.selected = false;
                } 					
            }
			
		]]>
	</fx:Script>
</s:ToggleButton>
